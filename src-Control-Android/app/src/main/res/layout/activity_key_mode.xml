<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.mpape.Ser.KeyMode" android:id="@+id/layman">

    <SurfaceView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/surfaceView" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.martin.test3c4.keymode"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text=" "
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|center_horizontal" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_above="@+id/button6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:focusableInTouchMode="true"
            android:layout_width="94.8dp"
            android:layout_height="25.2dp"
            android:text="前"
            android:id="@+id/button6"
            android:background="@drawable/up3"
            android:contentDescription="122"
            android:layout_above="@+id/button7"
            android:layout_marginLeft="14dp" />

        <ImageButton
            android:layout_width="94.8dp"
            android:layout_height="26.1dp"
            android:text="后"
            android:id="@+id/button3"
            android:background="@drawable/down3"
            android:contentDescription="122"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="14dp" />

        <ImageButton
            android:layout_width="34.95dp"
            android:layout_height="41.1dp"
            android:text="左"
            android:id="@+id/button7"
            android:background="@drawable/left3"
            android:layout_above="@+id/button3"
            android:layout_marginLeft="14dp"
             />

        <ImageButton
            android:layout_width="34.8dp"
            android:layout_height="41.1dp"
            android:text="右"
            android:id="@+id/button4"
            android:background="@drawable/right3"
            android:contentDescription="122"
            android:layout_below="@+id/button6"
            android:layout_toRightOf="@id/button5" />

        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:text=""
            android:id="@+id/button2"
            android:background="@drawable/alart3"
            android:button="@null"
            android:textColor="#ffffff"
            android:checked="false"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_below="@+id/button"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2" />

        <ImageButton
            android:layout_width="25.05dp"
            android:layout_height="41.1dp"
            android:text="拍照"
            android:id="@+id/button5"
            android:background="@drawable/tk3"
            android:contentDescription="122"
            android:keepScreenOn="true"
            android:layout_below="@+id/button6"
            android:layout_toRightOf="@+id/button7"
            android:layout_toEndOf="@+id/button7" />

        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:text="Key"
            android:id="@+id/button"
            android:background="@drawable/key3"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2" />

    </RelativeLayout>
</RelativeLayout>